<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.CoffeeTrail"
        tools:targetApi="31">
        <activity
            android:name=".MakePostActivity"
            android:exported="false"
            android:label="@string/title_activity_make_post"
            android:theme="@style/Theme.CoffeeTrail.NoActionBar" />
        <activity
            android:name=".ui.activity.ShopOrderActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.ShopListActivity"
            android:parentActivityName=".ui.activity.ShopOrderActivity" />
        <activity android:name=".ui.activity.AccountActivity" />
    </application>

</manifest>